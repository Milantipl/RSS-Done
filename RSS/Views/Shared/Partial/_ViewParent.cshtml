@model ConnectionLibrary.Model.Result

<div class="card card-info">

    <div class="card-header">
        <h3 class="card-title">Upload Doc</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col-md-12 text-right">
                <a class="btn btn-primary mb-1" data-toggle="modal" data-target="#myModal" onclick="javascript:Clear();">Add New</a>
            </div>

        </div>
        <table class="table table-bordered" id="sortTable">
            <thead class="m-head">
                <tr>


                    <th>Uploaded By</th>
                    <th>Description </th>

                    <th>Note</th>
                    <th>NoOfDocuments </th>
                    <th>Uploaded date</th>

                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Listmodel != null)
                {
                    foreach (var item in Model.Listmodel)
                    {
                        <tr>


                            <td>@item.Username</td>
                            <td>@item.description</td>


                            <td>@item.note</td>
                            <td>@item.NoOfDocuments</td>
                            <td>@item.uploded_date.ToShortDateString()</td>
                            <td>
                                <div class="row">
                                    <div class="col-md-12 text-right">
                                        @*<a class="btn btn-primary mb-1" data-toggle="modal" data-target="#Display" onclick="javascript:Clear();">Add New</a>*@
                                        @Html.ActionLink("View Details", "DocChild", new { id = item.id }) |



                                    </div>

                                </div>
                            </td>
                        </tr>

                    }
                }
            </tbody>
        </table>
    </div>
</div>
