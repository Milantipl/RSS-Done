@model ConnectionLibrary.Model.Result
<div class="card card-info">
    <div class="card-header">
        @if (Model.ViewVasti != null)
        {
            <h3 class="card-title">વસ્તી (Total: @Model.ViewVasti.Count)</h3>
        }
        else
        {
            <h3 class="card-title">વસ્તી</h3>
        }
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table class="table table-bordered">
            <thead class="m-head">
                <tr>
                    <th>વસ્તી </th>
                    <th>ભાગ </th>
                    <th>નગર </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.ViewVasti != null)
                {
                    foreach (var item in Model.ViewVasti)
                    {
                    <tr>
                        <td>@item.Vasti</td>
                        <td>@item.Bhag</td>
                        <td>@item.Nagar</td>
                    </tr>
                                            
                    }
                }
            </tbody>
        </table>
    </div>
</div>
