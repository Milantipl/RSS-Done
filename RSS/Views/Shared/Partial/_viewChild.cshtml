
@model ConnectionLibrary.Model.Result
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";

}



<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Document</h1>
                </div>
                <!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Doc","Master")">Back</a></li>
                        <li class="breadcrumb-item active">Document</li>
                    </ol>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <section class="content">
        <form id="frmrss">
            <div class="container-fluid">
                <!-- SELECT2 EXAMPLE -->
                <div class="card card-info">
                    <!--<div class="card-header">-->
                    @*<h3 class="card-title">Search</h3>*@

                    <!--<div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                        </div>
                    </div-->

                    <div> </div>
                    <table class="table table-bordered">
                        <thead class="m-head">
                            <tr>



                                <th>docname</th>
                                <th>doctype</th>
                                <th>Uploaded Date</th>
                                <th>Image</th>
                                <th>Download </th>


                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ListChild != null)
                            {
                                foreach (var item in Model.ListChild)
                                {
                                    <tr>


                                        <td>@item.docname</td>
                                        <td>@item.doctype </td>
                                        <td>@item.uploded_date.ToShortDateString()</td>
                                        <td>
                                            @if (@item.doctype == ".pdf")
                                            {
                                                <img src="~/Images/pdf.png" width="100px" height="100px" />
                                            }
                                            else if (@item.doctype == ".rar")
                                            {
                                                <img src="~/Images/rar.png" width="100px" height="100px" />
                                            }
                                            else if (@item.doctype == ".txt")
                                            {
                                                <img src="~/Images/txt.jpg" width="100px" height="100px" />
                                            }
                                            else if (@item.doctype == ".xls")
                                            {
                                                <img src="~/Images/xls.png" width="100px" height="100px" />
                                            }
                                            else if (@item.doctype == ".xml")
                                            {
                                                <img src="~/Images/xml.png" width="100px" height="100px" />
                                            }
                                            else if (@item.doctype == ".mov")
                                            {
                                                <img src="~/Images/mov.png" width="100px" height="100px" />
                                            }
                                            else if (@item.doctype == ".json")
                                            {
                                                <img src="~/Images/json.png" width="100px" height="100px" />
                                            }
                                            else if (@item.doctype == ".xml")
                                            {
                                                <img src="~/Images/xml.png" width="100px" height="100px" />
                                            }
                                            else if (@item.doctype == ".zip")
                                            {
                                                <img src="~/Images/zip.png" width="100px" height="100px" />
                                            }
                                            else
                                            {
                                                <img src="~/Images/@item.docname" width="100px" height="100px" />
                                            }

                                        </td>
                                        <td>@Html.ActionLink("Download", "DownloadFile", new { Name = item.docname })</td>


                                    </tr>

                                }

                            }
                        </tbody>
                    </table>
                </div>

                <div class="pagination">

                    @*<a onclick="GetRecords(1)">First</a>
                        <a onclick="GetRecords(@(Model.pager.CurrentPage - 1))">Previous</a>*@



                </div>








            </div>


        </form>
    </section>
</div>